{% extends 'base.html.twig' %}

{% block title %}Meet Our Sponsors{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center">
        <h6 class="section-title bg-white text-center text-primary px-3">Sponsor Guide</h6>
        <h1 class="mb-5">Meet Our Sponsors</h1>
    </div>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        {% for forumsponsor in forumsponsors %}
            <div class="col">
                <div class="card h-100 shadow">
                    {% if forumsponsor.produit %}
                        <img src="{{ asset('uploads/images/' ~ forumsponsor.produit) }}" class="card-img-top" alt="Sponsor Image">
                    {% endif %}
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">{{ forumsponsor.getdemande() }}</h5>
                        <p class="card-text"><strong>Amount:</strong> {{ forumsponsor.monatant }}</p>
                        <p class="card-text"><strong>Phone:</strong> {{ forumsponsor.numtel }}</p>
                        <div class="social-links">
                            <!-- Add social media icons here -->
                            <a href="#" class="btn btn-primary btn-sm"><i class="fab fa-facebook-f"></i></a>
                            <a href="#" class="btn btn-info btn-sm"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="btn btn-danger btn-sm"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
